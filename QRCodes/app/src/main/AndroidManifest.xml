<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="team2beat.com.qrcodes" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/UoDqrRegister" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StaffMainActivity"
            android:label="@string/title_activity_staff_main"
            android:parentActivityName=".LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="team2beat.com.qrcodes.LoginActivity" />
        </activity>
        <activity
            android:name=".QR_and_Register_Activity"
            android:label="@string/title_activity_qr_and__register_"
            android:parentActivityName=".StaffMainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="team2beat.com.qrcodes.StaffMainActivity" />
        </activity>
        <activity
            android:name=".QrDisplayActivity"
            android:label="@string/title_activity_qr_display"
            android:parentActivityName=".QR_and_Register_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="team2beat.com.qrcodes.QR_and_Register_Activity" />
        </activity>
        <activity
            android:name=".RegisterView"
            android:label="@string/title_activity_register_view"
            android:parentActivityName=".QR_and_Register_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="team2beat.com.qrcodes.QR_and_Register_Activity" />
        </activity>
        <activity
            android:name=".ModuleStatistics"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".module_statistics"
            android:label="@string/title_activity_module_statistics" >
        </activity>
        <activity
            android:name=".staff_modules"
            android:label="@string/title_activity_staff_modules" >
        </activity>
        <activity
            android:name=".ClassDetails"
            android:label="@string/title_activity_class_details" >
        </activity>
    </application>

</manifest>
