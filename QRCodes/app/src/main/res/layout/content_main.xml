<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="team2beat.com.qrcodes.MainActivity"
    tools:showIn="@layout/activity_main"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:id="@+id/qrImage"
            android:layout_column="10"
            android:layout_span="2"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="32dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="782dp"
            android:contentDescription="Generated QR code" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="50dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GENERATE"
                android:id="@+id/button2"
                android:onClick="generateQRCode"
                android:layout_column="11"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignEnd="@id/button2" />

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SCAN"
                    android:id="@+id/button"
                android:layout_row="2"        android:onClick="ScanQR"
                    android:layout_column="0"
                    android:layout_span="12"
                android:layout_below="@+id/button2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </LinearLayout>

        <TextView
            android:layout_width="262dp"
            android:layout_height="76dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="QR Result text here"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:textAlignment="center" />
    </FrameLayout>


</RelativeLayout>
