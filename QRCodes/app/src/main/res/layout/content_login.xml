<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="team2beat.com.qrcodes.LoginActivity"
    tools:showIn="@layout/activity_login"
    android:id="@+id/rlRelativeLayout">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_marginTop="69dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txtLogin"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_below="@+id/editText"
        android:layout_marginTop="31dp"
        android:layout_toRightOf="@+id/txtPassword"
        android:layout_toEndOf="@+id/txtPassword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:id="@+id/loginMusic"
        android:onClick="submitLogin"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/txtvTitle"
        android:layout_alignEnd="@+id/txtvTitle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DUMMY LOGIN STAFF"
        android:id="@+id/dummyLogin"
        android:onClick="dummyLogin"
        android:layout_toStartOf="@+id/button6"
        android:layout_below="@+id/editText2"
        android:layout_toLeftOf="@+id/button6"
        android:layout_alignBottom="@+id/button6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DUMMY LOGIN STUDENT"
        android:id="@+id/button6"
        android:onClick="dummyLoginStudent"
        android:layout_below="@+id/editText2"
        android:layout_alignRight="@+id/txtvTitle"
        android:layout_alignEnd="@+id/txtvTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="UoD - Team2Beat"
        android:id="@+id/txtvTitle"
        android:textAlignment="center"
        android:background="#5494ff"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_toRightOf="@+id/txtLogin"
        android:layout_toEndOf="@+id/txtLogin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Login:"
        android:id="@+id/txtLogin"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Password:"
        android:id="@+id/txtPassword"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/loginMusic"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
