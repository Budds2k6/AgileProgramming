<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="team2beat.com.qrcodes.LoginActivity"
    tools:showIn="@layout/activity_login"
    android:theme="@style/AppTheme">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:id="@+id/linearLayout2">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:id="@+id/imageView"

                android:src="@drawable/universityofdundeecrest"
                android:scaleType="fitCenter"
                android:cropToPadding="false"
                android:layout_gravity="center_horizontal|top"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Login"
                android:id="@+id/txtLogin"
                android:layout_above="@+id/editText2"
                android:layout_toLeftOf="@+id/editText"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:nestedScrollingEnabled="false"
                android:singleLine="false" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText"

                android:inputType="text"
                android:layout_toRightOf="@+id/txtPassword"
                android:theme="@style/classDetail"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/loginMusic"
                android:layout_alignEnd="@+id/loginMusic"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

            </LinearLayout>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Password"
                android:id="@+id/txtPassword"
                android:layout_alignBottom="@+id/editText2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_weight="0"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_below="@+id/editText"
                android:theme="@style/classDetail"
                android:layout_toRightOf="@+id/txtPassword"
                android:layout_toEndOf="@+id/txtPassword"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <Button
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:id="@+id/loginMusic"
            android:onClick="submitLogin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="20dp" />
    </LinearLayout>

</RelativeLayout>
